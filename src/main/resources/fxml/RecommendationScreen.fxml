<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.songbitmaven.RecommendationController">
  <children>
    <Label layoutX="208.0" layoutY="24.0" prefHeight="77.0" prefWidth="184.0" text="RECOMMENDATION PAGE" textAlignment="CENTER">
      <font>
        <Font name="Arial Black" size="12.0" />
      </font>
    </Label>
      <TextField fx:id="login" layoutX="237.0" layoutY="88.0" onAction="#handleLogin" promptText="last.fm username" />
      <Button fx:id="recommend" layoutX="412.0" layoutY="88.0" mnemonicParsing="false" onMouseReleased="#handleRecommend" text="Get Recommendations" />
      <MenuBar prefHeight="29.0" prefWidth="600.0" AnchorPane.rightAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" onAction="#handleSaveProfile" text="Save Profile" />
                  <MenuItem mnemonicParsing="false" onAction="#handleLoadProfile" text="Load Profile" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Goto">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#goToSearch" text="Search" />
                <MenuItem mnemonicParsing="false" onAction="#goToFavorites" text="Favorites" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
  </children>
</AnchorPane>
